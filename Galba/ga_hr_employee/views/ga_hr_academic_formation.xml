<?xml version="1.0" encoding="UTF-8"?>
    <openerp>
        <data>
           	<!--Academic formation view form -->
        	<record id="ga_hr_academic_formation_view_form" model="ir.ui.view">
	            <field name="name">ga.hr.academic.formation.view.form</field>
	            <field name="model">ga.hr.academic.formation</field>           
	            <field name="arch" type="xml">
	            	<form>	                      
	                	<sheet>
	                		<group>	
	                			<field name="obtained_title_id" required="1"/>
	                			<field name="university_id" required="0"/>
				                <field name="education_level" required="1"/>
				                <field name="educational_branch" required="0"/>
				                <field name="admission_date" required="0"/>
				                <field name="egress_date" required="0"/>
				            </group>			
	                    </sheet>
	                </form>
	            </field>
        	</record>
        	
        	<!--Academic formation view tree-->
            <record id="ga_hr_academic_formation_view_tree" model="ir.ui.view">
	            <field name="name">ga.hr.academic.formation.view.tree</field>
	            <field name="model">ga.hr.academic.formation</field>             
	            <field name="arch" type="xml">
	                <tree string="Academic formation">
	                	<field name="obtained_title_id" required="1"  widget="selection"/> 
	                	<field name="university_id" required="0"  widget="selection"/>
	                	<field name="education_level" required="1"/>
				        <field name="admission_date" required="0"/>
				        <field name="egress_date" required="0"/>
	                </tree>
	            </field>
            </record>         
        </data>
    </openerp>
        
        
        
        
        
        