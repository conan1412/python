<?xml version="1.0" encoding="UTF-8"?>
    <openerp>
        <data>
           	<!--Employee courses view form -->
        	<record id="ga_hr_employee_courses_wiew_form" model="ir.ui.view">
	            <field name="name">ga.hr.employee.courses.view.form</field>
	            <field name="model">ga.hr.employee.courses</field>           
	            <field name="arch" type="xml">
	            	<form>	                      
	                	<sheet>
	                		<group>
	                			<field name="courses_id" required="1"/>
                  		 		<field name="university_id" required="1"/>
	                           	<field name="site" required="0"/>
	                           	<field name="number_hours" required="1"/>
	                           	<field name="start_date" required="0"/>
		                        <field name="end_date" required="0"/> 
		                    </group>
	                    </sheet>
	                </form>
	            </field>
        	</record>  
        	<!--Employee courses view tree-->
            <record id="ga_hr_employee_courses_view_tree" model="ir.ui.view">
	            <field name="name">ga.hr.employee.courses.view.tree</field>
	            <field name="model">ga.hr.employee.courses</field>               
	            <field name="arch" type="xml">
	                <tree string="Employee courses">
	                	<field name="courses_id" required="1"/>	
	                	<field name="university_id" required="1"/>
	                	<field name="site" required="0"/>
	                	<field name="number_hours" required="1"/> 
	                	<field name="start_date" required="0"/>
				        <field name="end_date" required="0"/>
	                </tree>
	            </field>
            </record>     
        </data>
    </openerp>
        
        
        
        
        
        